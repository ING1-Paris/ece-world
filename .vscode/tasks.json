{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "main.o",
                //"${fileDirname}/${fileBasenameNoExtension}.o",
                //"${fileDirname}/*.c",
                //"${fileDirname}/*/*.c",
                "*.c",
                "*/*.c",
                "-L/usr/local/lib",
                "-lalleg",
                "-lm",
                "-Wall",
                "-Wextra",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build and Run",
            "dependsOn": [
                "Build"
            ],
            "type": "shell",
            //"command": "${fileDirname}/${fileBasenameNoExtension}.o",
            "command": "./main.o",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}